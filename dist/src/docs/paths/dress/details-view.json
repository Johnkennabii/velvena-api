                    "schema": { "type": "number", "example": 800.0 }
                },
                {
                    "name": "pricePerDayMax",
                    "in": "query",
                    "required": false,
                    "description": "Maximum daily price (TTC) filter.",
                    "schema": { "type": "number", "example": 120.0 }
