{
    "/mails/{mailbox}/{uid}/reply": {
        "post": {
            "tags": ["Mail"],
            "summary": "Répondre à un email",
            "description": "Envoie une réponse à un email spécifique en citant le message original",
            "operationId": "replyToMail",
            "security": [
                {
                    "bearerAuth": []
                }
            ],
            "parameters": [
                {
                    "name": "mailbox",
                    "in": "path",
                    "required": true,
                    "description": "Nom de la boîte mail (inbox, sent, trash, spam, drafts)",
                    "schema": {
                        "type": "string",
                        "example": "inbox"
                    }
                },
                {
                    "name": "uid",
                    "in": "path",
                    "required": true,
                    "description": "UID de l'email à répondre",
                    "schema": {
                        "type": "integer",
                        "example": 123
                    }
                }
            ],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "required": ["body"],
                            "properties": {
                                "body": {
                                    "type": "string",
                                    "description": "Corps de la réponse en HTML",
                                    "example": "<p>Merci pour votre message. Voici ma réponse...</p>"
                                },
                                "bodyText": {
                                    "type": "string",
                                    "description": "Corps de la réponse en texte brut (optionnel)",
                                    "example": "Merci pour votre message. Voici ma réponse..."
                                },
                                "attachments": {
                                    "type": "array",
                                    "description": "Pièces jointes optionnelles",
                                    "items": {
                                        "type": "object",
                                        "required": ["filename", "content"],
                                        "properties": {
                                            "filename": {
                                                "type": "string",
                                                "example": "document.pdf"
                                            },
                                            "content": {
                                                "type": "string",
                                                "description": "Contenu encodé en base64",
                                                "example": "JVBERi0xLjUKJcTl8uXrp/Og0MTGCjEgMCBvYmoKPDwvTGluZWFyaXplZCAxL0wgMzI1Nj..."
                                            },
                                            "contentType": {
                                                "type": "string",
                                                "description": "Type MIME",
                                                "example": "application/pdf"
                                            },
                                            "encoding": {
                                                "type": "string",
                                                "description": "Encodage du contenu",
                                                "example": "base64"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "Réponse envoyée avec succès",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "success": {
                                        "type": "boolean",
                                        "example": true
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Réponse envoyée avec succès"
                                    }
                                }
                            }
                        }
                    }
                },
                "400": {
                    "description": "Données invalides",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "success": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "error": {
                                        "type": "string",
                                        "example": "Le corps de la réponse est requis"
                                    }
                                }
                            }
                        }
                    }
                },
                "401": {
                    "description": "Non autorisé"
                },
                "500": {
                    "description": "Erreur serveur",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "success": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "error": {
                                        "type": "string",
                                        "example": "Erreur lors de l'envoi de la réponse"
                                    },
                                    "details": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
