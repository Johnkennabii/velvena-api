{
  "/mails/mailboxes": {
    "get": {
      "tags": ["Mail"],
      "summary": "Liste toutes les boîtes mail disponibles",
      "description": "Récupère la liste de toutes les boîtes mail disponibles avec leur nombre de messages",
      "operationId": "getMailboxes",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "responses": {
        "200": {
          "description": "Liste des boîtes mail récupérée avec succès",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": true
                  },
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "example": "INBOX"
                        },
                        "displayName": {
                          "type": "string",
                          "example": "Boîte de réception"
                        },
                        "total": {
                          "type": "number",
                          "example": 150
                        },
                        "new": {
                          "type": "number",
                          "example": 5
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Non autorisé"
        },
        "500": {
          "description": "Erreur serveur"
        }
      }
    }
  }
}
