{
  "/prospects/{prospectId}/requests": {
    "get": {
      "tags": ["Prospect Requests"],
      "summary": "Get all requests for a prospect",
      "description": "Retrieves all requests (demandes) for a specific prospect with their dresses and calculations",
      "operationId": "getProspectRequests",
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "prospectId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string",
            "format": "uuid"
          },
          "description": "The prospect ID"
        }
      ],
      "responses": {
        "200": {
          "description": "‚úÖ Successfully retrieved prospect requests",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/GetProspectRequestsResponse" }
            }
          }
        },
        "400": {
          "description": "‚ùå Bad request - invalid prospect ID",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ErrorResponse" }
            }
          }
        },
        "500": {
          "description": "üí• Server error",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ErrorResponse" }
            }
          }
        }
      }
    }
  }
}
