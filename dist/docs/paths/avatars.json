{
  "/avatars": {
    "get": {
      "tags": ["Avatars"],
      "summary": "Get list of available avatar files",
      "description": "Returns a list of available avatar files with their names and URLs.",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "responses": {
        "200": {
          "description": "A list of avatar files",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "avatars": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "description": "Unique identifier for the avatar"
                        },
                        "name": {
                          "type": "string",
                          "description": "Name of the avatar file"
                        },
                        "url": {
                          "type": "string",
                          "format": "uri",
                          "description": "URL to access the avatar file"
                        }
                      },
                      "required": ["id", "name", "url"]
                    }
                  }
                },
                "required": ["avatars"]
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized"
        }
      }
    },
    "post": {
      "tags": ["Avatars"],
      "summary": "Upload a new avatar",
      "description": "Upload a new avatar file. The uploaded file should be sent as multipart/form-data.",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "file": {
                  "type": "string",
                  "format": "binary",
                  "description": "The avatar file to upload"
                }
              },
              "required": ["file"]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Avatar successfully uploaded",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier for the avatar"
                  },
                  "name": {
                    "type": "string",
                    "description": "Name of the avatar file"
                  },
                  "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "URL to access the avatar file"
                  }
                },
                "required": ["id", "name", "url"]
              }
            }
          }
        },
        "400": {
          "description": "Bad Request"
        },
        "401": {
          "description": "Unauthorized"
        }
      }
    }
  }
  ,
  "/avatars/{id}": {
    "get": {
      "tags": ["Avatars"],
      "summary": "Get avatar by ID",
      "description": "Returns a single avatar object by its ID.",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "UUID of the avatar",
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Avatar object",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier for the avatar"
                  },
                  "name": {
                    "type": "string",
                    "description": "Name of the avatar file"
                  },
                  "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "URL to access the avatar file"
                  }
                },
                "required": ["id", "name", "url"]
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized"
        },
        "404": {
          "description": "Avatar not found"
        }
      }
    },
    "delete": {
      "tags": ["Avatars"],
      "summary": "Delete avatar by ID",
      "description": "Deletes an avatar by its ID.",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "UUID of the avatar",
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Deletion result",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "description": "Result message"
                  },
                  "success": {
                    "type": "boolean",
                    "description": "Indicates if the deletion was successful"
                  }
                },
                "required": ["message", "success"]
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized"
        },
        "404": {
          "description": "Avatar not found"
        }
      }
    }
  }
}
