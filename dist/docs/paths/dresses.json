{
  "/dresses/details": {
    "get": {
      "tags": ["Dresses"],
      "summary": "Get detailed dresses list with pagination and filters",
      "parameters": [
        {
          "name": "page",
          "in": "query",
          "description": "Page number (default: 1)",
          "required": false,
          "schema": { "type": "integer", "default": 1, "minimum": 1 }
        },
        {
          "name": "limit",
          "in": "query",
          "description": "Number of items per page (default: 20)",
          "required": false,
          "schema": { "type": "integer", "default": 20, "minimum": 1 }
        },
        {
          "name": "id",
          "in": "query",
          "description": "Filter by dress UUID (optional)",
          "required": false,
          "schema": { "type": "string", "format": "uuid" }
        },
        {
          "name": "sizes",
          "in": "query",
          "description": "Filter by dress sizes (comma separated)",
          "required": false,
          "schema": { "type": "string" }
        },
        {
          "name": "types",
          "in": "query",
          "description": "Filter by dress types (comma separated)",
          "required": false,
          "schema": { "type": "string" }
        },
        {
          "name": "colors",
          "in": "query",
          "description": "Filter by dress colors (comma separated)",
          "required": false,
          "schema": { "type": "string" }
        },
        {
          "name": "priceMax",
          "in": "query",
          "description": "Maximum price filter",
          "required": false,
          "schema": { "type": "number", "format": "float" }
        },
        {
          "name": "pricePerDayMax",
          "in": "query",
          "description": "Maximum price per day (TTC) filter",
          "required": false,
          "schema": { "type": "number", "format": "float" }
        },
        {
          "name": "startDate",
          "in": "query",
          "description": "Start date for filtering (ISO 8601)",
          "required": false,
          "schema": { "type": "string", "format": "date-time" }
        },
        {
          "name": "endDate",
          "in": "query",
          "description": "End date for filtering (ISO 8601)",
          "required": false,
          "schema": { "type": "string", "format": "date-time" }
        }
      ],
      "responses": {
        "200": {
          "description": "Paginated and filtered list of dresses with details",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "total": { "type": "integer" },
                  "page": { "type": "integer" },
                  "limit": { "type": "integer" },
                  "data": {
                    "type": "array",
                    "items": {
                      "allOf": [
                        { "$ref": "#/components/schemas/DressWithDetails" },
                        {
                          "type": "object",
                          "properties": {
                            "price_ht": { "type": "number" },
                            "price_ttc": { "type": "number" },
                            "price_per_day_ht": { "type": "number" },
                            "price_per_day_ttc": { "type": "number" }
                          },
                          "required": ["price_ht", "price_ttc", "price_per_day_ht", "price_per_day_ttc"]
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "/dresses/availability": {
    "get": {
      "tags": ["Dresses"],
      "summary": "Get dresses availability between two dates",
      "parameters": [
        {
          "name": "startDate",
          "in": "query",
          "description": "Contract start date (ISO 8601)",
          "required": true,
          "schema": { "type": "string", "format": "date-time" }
        },
        {
          "name": "endDate",
          "in": "query",
          "description": "Contract end date (ISO 8601)",
          "required": true,
          "schema": { "type": "string", "format": "date-time" }
        }
      ],
      "responses": {
        "200": {
          "description": "List of dresses with availability",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "data": {
                    "type": "array",
                    "items": {
                      "allOf": [
                        { "$ref": "#/components/schemas/DressWithDetails" },
                        {
                          "type": "object",
                          "properties": {
                            "available": { "type": "boolean" }
                          },
                          "required": ["available"]
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "/dresses": {
    "get": {
      "tags": ["Dresses"],
      "summary": "Get all dresses",
      "responses": {
        "200": {
          "description": "List of dresses",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "data": {
                    "type": "array",
                    "items": {
                      "allOf": [
                        { "$ref": "#/components/schemas/Dress" },
                        {
                          "type": "object",
                          "properties": {
                            "price_ht": { "type": "number" },
                            "price_ttc": { "type": "number" },
                            "price_per_day_ht": { "type": "number" },
                            "price_per_day_ttc": { "type": "number" }
                          },
                          "required": ["price_ht", "price_ttc", "price_per_day_ht", "price_per_day_ttc"]
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": ["Dresses"],
      "summary": "Create a new dress",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                { "$ref": "#/components/schemas/DressCreateInput" },
                {
                  "type": "object",
                  "required": ["price_ht", "price_ttc", "price_per_day_ht", "price_per_day_ttc"],
                  "properties": {
                    "price_ht": {
                      "type": "number",
                      "description": "Price excluding taxes (HT)"
                    },
                    "price_ttc": {
                      "type": "number",
                      "description": "Price including all taxes (TTC)"
                    },
                    "price_per_day_ht": {
                      "type": "number",
                      "description": "Price per day excluding taxes (HT)"
                    },
                    "price_per_day_ttc": {
                      "type": "number",
                      "description": "Price per day including all taxes (TTC)"
                    }
                  }
                }
              ]
            }
          },
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "string",
                  "description": "JSON string containing dress creation fields matching DressCreateInput schema"
                },
                "images": {
                  "type": "array",
                  "items": { "type": "string", "format": "binary" },
                  "description": "Optional array of image files"
                }
              },
              "required": ["data"]
            }
          }
        }
      },
      "responses": {
        "201": { "description": "Dress created" }
      }
    }
  },
  "/dresses/{id}": {
    "get": {
      "tags": ["Dresses"],
      "summary": "Get a dress by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": {
          "description": "Dress details",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  { "$ref": "#/components/schemas/Dress" },
                  {
                    "type": "object",
                    "properties": {
                      "price_ht": { "type": "number" },
                      "price_ttc": { "type": "number" },
                      "price_per_day_ht": { "type": "number" },
                      "price_per_day_ttc": { "type": "number" }
                    },
                    "required": ["price_ht", "price_ttc", "price_per_day_ht", "price_per_day_ttc"]
                  }
                ]
              }
            }
          }
        },
        "404": {
          "description": "Dress not found"
        }
      }
    },
    "put": {
      "tags": ["Dresses"],
      "summary": "Update a dress",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                { "$ref": "#/components/schemas/DressUpdateInput" },
                {
                  "type": "object",
                  "required": ["price_ht", "price_ttc", "price_per_day_ht", "price_per_day_ttc"],
                  "properties": {
                    "price_ht": {
                      "type": "number",
                      "description": "Price excluding taxes (HT)"
                    },
                    "price_ttc": {
                      "type": "number",
                      "description": "Price including all taxes (TTC)"
                    },
                    "price_per_day_ht": {
                      "type": "number",
                      "description": "Price per day excluding taxes (HT)"
                    },
                    "price_per_day_ttc": {
                      "type": "number",
                      "description": "Price per day including all taxes (TTC)"
                    }
                  }
                }
              ]
            }
          },
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "string",
                  "description": "JSON string containing dress update fields matching DressUpdateInput schema"
                },
                "images": {
                  "type": "array",
                  "items": { "type": "string", "format": "binary" },
                  "description": "Optional array of image files"
                }
              },
              "required": ["data"]
            }
          }
        }
      },
      "responses": {
        "200": { "description": "Dress updated successfully" }
      }
    },
    "patch": {
      "tags": ["Dresses"],
      "summary": "Soft delete a dress",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": { "description": "Dress soft deleted successfully" }
      }
    }
  },
  "/dresses/{id}/hard": {
    "delete": {
      "tags": ["Dresses"],
      "summary": "Hard delete a dress",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": { "description": "Dress permanently deleted" }
      }
    }
  },
  "/dresses/{id}/images/{filename}": {
    "delete": {
      "tags": ["Dresses"],
      "summary": "Delete an image from a dress",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        },
        {
          "name": "filename",
          "in": "path",
          "required": true,
          "description": "Filename of the image to delete",
          "schema": { "type": "string" }
        }
      ],
      "responses": {
        "200": {
          "description": "Image deleted successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean", "enum": [true] },
                  "message": { "type": "string" },
                  "data": {
                    "type": "string",
                    "description": "The filename of the deleted image"
                  }
                },
                "required": ["success", "message", "data"]
              }
            }
          }
        },
        "400": {
          "description": "Invalid parameters",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean", "enum": [false] },
                  "error": { "type": "string" }
                },
                "required": ["success", "error"]
              }
            }
          }
        },
        "404": {
          "description": "Image not found",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean", "enum": [false] },
                  "error": { "type": "string" }
                },
                "required": ["success", "error"]
              }
            }
          }
        }
      }
    }
  },
  "/dress-storage": {
    "post": {
      "tags": ["Dress Storage"],
      "summary": "Upload dress images",
      "requestBody": {
        "required": true,
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "images": {
                  "type": "array",
                  "items": { "type": "string", "format": "binary" },
                  "description": "Up to 5 image files"
                }
              },
              "required": ["images"]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Images uploaded successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "files": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "name": { "type": "string" },
                        "url": { "type": "string", "format": "uri" }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "400": { "description": "No files uploaded" },
        "500": { "description": "Failed to upload images" }
      }
    }
  }
}