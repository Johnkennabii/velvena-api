{
  "/dress-conditions": {
    "get": {
      "tags": ["DressConditions"],
      "summary": "Get all dress conditions",
      "responses": {
        "200": {
          "description": "List of dress conditions",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "data": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/DressCondition" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": ["DressConditions"],
      "summary": "Create a new dress condition",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" }
              },
              "required": ["name"]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Dress condition created",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/DressCondition" }
            }
          }
        }
      }
    }
  },
  "/dress-conditions/{id}": {
    "put": {
      "tags": ["DressConditions"],
      "summary": "Update a dress condition",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Dress condition updated",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/DressCondition" }
            }
          }
        }
      }
    },
    "patch": {
      "tags": ["DressConditions"],
      "summary": "Soft delete a dress condition",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
      ],
      "responses": {
        "200": {
          "description": "Dress condition soft deleted",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/DressCondition" }
            }
          }
        }
      }
    }
  },
  "/dress-conditions/{id}/hard": {
    "delete": {
      "tags": ["DressConditions"],
      "summary": "Hard delete a dress condition",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
      ],
      "responses": {
        "200": {
          "description": "Dress condition permanently deleted",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "message": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}