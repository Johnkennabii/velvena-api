{
  "/contract-addons": {
    "get": {
      "tags": ["ContractAddons"],
      "summary": "Get all contract addons",
      "responses": {
        "200": {
          "description": "List of contract addons",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "data": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/ContractAddon" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": ["ContractAddons"],
      "summary": "Create a contract addon",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ContractAddonCreateInput" }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Contract addon created",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractAddon" }
            }
          }
        }
      }
    }
  },
  "/contract-addons/{id}": {
    "get": {
      "tags": ["ContractAddons"],
      "summary": "Get contract addon by ID",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
      ],
      "responses": {
        "200": {
          "description": "Contract addon found",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractAddon" }
            }
          }
        },
        "404": { "description": "Contract addon not found" }
      }
    },
    "put": {
      "tags": ["ContractAddons"],
      "summary": "Update a contract addon",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ContractAddonUpdateInput" }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Contract addon updated",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractAddon" }
            }
          }
        }
      }
    },
    "patch": {
      "tags": ["ContractAddons"],
      "summary": "Soft delete a contract addon",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
      ],
      "responses": {
        "200": {
          "description": "Contract addon soft deleted",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractAddon" }
            }
          }
        }
      }
    }
  },
  "/contract-addons/{id}/hard": {
    "delete": {
      "tags": ["ContractAddons"],
      "summary": "Hard delete a contract addon",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
      ],
      "responses": {
        "200": {
          "description": "Contract addon permanently deleted",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "message": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}