{
  "/dress-colors": {
    "get": {
      "tags": ["DressColors"],
      "summary": "Get all dress colors",
      "responses": {
        "200": {
          "description": "List of dress colors",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "data": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/DressColor" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": ["DressColors"],
      "summary": "Create a new dress color",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "hex_code": { "type": "string" }
              },
              "required": ["name", "hex_code"]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Dress color created",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/DressColor" }
            }
          }
        }
      }
    }
  },
  "/dress-colors/{id}": {
    "put": {
      "tags": ["DressColors"],
      "summary": "Update a dress color",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "hex_code": { "type": "string" }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Dress color updated",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/DressColor" }
            }
          }
        }
      }
    },
    "patch": {
      "tags": ["DressColors"],
      "summary": "Soft delete a dress color",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
      ],
      "responses": {
        "200": {
          "description": "Dress color soft deleted",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/DressColor" }
            }
          }
        }
      }
    }
  },
  "/dress-colors/{id}/hard": {
    "delete": {
      "tags": ["DressColors"],
      "summary": "Hard delete a dress color",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
      ],
      "responses": {
        "200": {
          "description": "Dress color permanently deleted",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "message": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}