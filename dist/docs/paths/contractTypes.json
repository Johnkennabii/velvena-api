{
  "/contract-types": {
    "get": {
      "tags": ["ContractTypes"],
      "summary": "Get all contract types",
      "responses": {
        "200": {
          "description": "List of contract types",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "data": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/ContractType" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": ["ContractTypes"],
      "summary": "Create a new contract type",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ContractTypeCreateInput" }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Contract type created",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractType" }
            }
          }
        }
      }
    }
  },
  "/contract-types/{id}": {
    "get": {
      "tags": ["ContractTypes"],
      "summary": "Get a contract type by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": {
          "description": "Contract type found",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractType" }
            }
          }
        },
        "404": { "description": "Contract type not found" }
      }
    },
    "put": {
      "tags": ["ContractTypes"],
      "summary": "Update a contract type",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ContractTypeUpdateInput" }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Contract type updated",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractType" }
            }
          }
        }
      }
    },
    "patch": {
      "tags": ["ContractTypes"],
      "summary": "Soft delete a contract type",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": {
          "description": "Contract type soft deleted",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractType" }
            }
          }
        }
      }
    }
  },
  "/contract-types/{id}/hard": {
    "delete": {
      "tags": ["ContractTypes"],
      "summary": "Hard delete a contract type",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": {
          "description": "Contract type permanently deleted",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "message": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}