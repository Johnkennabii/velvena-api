{
  "/mails/{mailbox}": {
    "get": {
      "tags": ["Mail"],
      "summary": "Récupère les emails d'une boîte mail",
      "description": "Liste les emails d'une boîte mail spécifique (INBOX, Sent, Trash, Spam) avec pagination",
      "operationId": "getMailsFromMailbox",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "parameters": [
        {
          "name": "mailbox",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string",
            "enum": ["inbox", "sent", "trash", "spam"]
          },
          "description": "Type de boîte mail (insensible à la casse)"
        },
        {
          "name": "limit",
          "in": "query",
          "required": false,
          "schema": {
            "type": "integer",
            "default": 50,
            "minimum": 1,
            "maximum": 100
          },
          "description": "Nombre d'emails à récupérer"
        },
        {
          "name": "offset",
          "in": "query",
          "required": false,
          "schema": {
            "type": "integer",
            "default": 0,
            "minimum": 0
          },
          "description": "Offset pour la pagination"
        }
      ],
      "responses": {
        "200": {
          "description": "Liste des emails récupérée avec succès",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": true
                  },
                  "data": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/EmailMessage"
                    }
                  },
                  "pagination": {
                    "type": "object",
                    "properties": {
                      "limit": {
                        "type": "number",
                        "example": 50
                      },
                      "offset": {
                        "type": "number",
                        "example": 0
                      },
                      "count": {
                        "type": "number",
                        "example": 25
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Type de boîte mail invalide"
        },
        "401": {
          "description": "Non autorisé"
        },
        "500": {
          "description": "Erreur serveur"
        }
      }
    }
  }
}
