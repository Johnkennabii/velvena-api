{
  "/dress-types": {
    "get": {
      "tags": ["DressTypes"],
      "summary": "Get all dress types",
      "responses": {
        "200": {
          "description": "List of dress types",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "count": { "type": "integer" },
                  "data": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/DressType" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": ["DressTypes"],
      "summary": "Create a new dress type",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/DressTypeCreateInput" }
          }
        }
      },
      "responses": {
        "201": { "description": "Dress type created successfully" }
      }
    }
  },
  "/dress-types/{id}": {
    "get": {
      "tags": ["DressTypes"],
      "summary": "Get a dress type by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": {
          "description": "Dress type details",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/DressType" }
            }
          }
        },
        "404": { "description": "Dress type not found" }
      }
    },
    "put": {
      "tags": ["DressTypes"],
      "summary": "Update a dress type",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/DressTypeUpdateInput" }
          }
        }
      },
      "responses": {
        "200": { "description": "Dress type updated successfully" },
        "404": { "description": "Dress type not found" }
      }
    },
    "delete": {
      "tags": ["DressTypes"],
      "summary": "Hard delete a dress type",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": { "description": "Dress type permanently deleted" },
        "404": { "description": "Dress type not found" }
      }
    },
    "patch": {
      "tags": ["DressTypes"],
      "summary": "Soft delete a dress type",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": { "description": "Dress type soft deleted successfully" },
        "404": { "description": "Dress type not found" }
      }
    }
  }
}