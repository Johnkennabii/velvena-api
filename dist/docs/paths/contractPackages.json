{
  "/contract-packages": {
    "get": {
      "tags": ["ContractPackages"],
      "summary": "Get all contract packages",
      "responses": {
        "200": {
          "description": "List of contract packages",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "data": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/ContractPackage" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": ["ContractPackages"],
      "summary": "Create a new contract package",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                { "$ref": "#/components/schemas/ContractPackageCreateInput" },
                {
                  "type": "object",
                  "properties": {
                    "addon_ids": {
                      "type": "array",
                      "items": { "type": "string", "format": "uuid" },
                      "description": "Array of addon UUIDs to link existing addons to this contract package"
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Contract package created",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractPackage" }
            }
          }
        }
      }
    }
  },
  "/contract-packages/{id}": {
    "get": {
      "tags": ["ContractPackages"],
      "summary": "Get a contract package by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": {
          "description": "Contract package found",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractPackage" }
            }
          }
        },
        "404": { "description": "Contract package not found" }
      }
    },
    "put": {
      "tags": ["ContractPackages"],
      "summary": "Update a contract package",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                { "$ref": "#/components/schemas/ContractPackageUpdateInput" },
                {
                  "type": "object",
                  "properties": {
                    "addon_ids": {
                      "type": "array",
                      "items": { "type": "string", "format": "uuid" },
                      "description": "Array of addon UUIDs to link existing addons to this contract package"
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Contract package updated",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractPackage" }
            }
          }
        }
      }
    },
    "patch": {
      "tags": ["ContractPackages"],
      "summary": "Soft delete a contract package",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": {
          "description": "Contract package soft deleted",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractPackage" }
            }
          }
        }
      }
    }
  },
  "/contract-packages/{id}/hard": {
    "delete": {
      "tags": ["ContractPackages"],
      "summary": "Hard delete a contract package",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": {
          "description": "Contract package permanently deleted",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "message": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  },
  "/contract-packages/{id}/addons": {
    "post": {
      "tags": ["ContractPackages"],
      "summary": "Attach addons to a contract package",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "addon_ids": {
                  "type": "array",
                  "items": { "type": "string", "format": "uuid" },
                  "description": "Array of addon UUIDs to attach"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Addons attached successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "data": { "$ref": "#/components/schemas/ContractPackage" }
                }
              }
            }
          }
        }
      }
    }
  }
}