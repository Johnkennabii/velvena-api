{
  "/users": {
    "get": {
      "summary": "Get all users",
      "tags": ["Users"],
      "responses": {
        "200": {
          "description": "List of users",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/UserWithProfileAndRole" }
              }
            }
          }
        },
        "401": { "description": "Unauthorized" }
      },
      "security": [
        { "bearerAuth": [] }
      ]
    }
  },
  "/users/{id}": {
    "get": {
      "summary": "Get user by ID",
      "tags": ["Users"],
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
      ],
      "responses": {
        "200": {
          "description": "User found",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserWithProfileAndRole" }
            }
          }
        },
        "404": { "description": "User not found" },
        "401": { "description": "Unauthorized" }
      },
      "security": [
        { "bearerAuth": [] }
      ]
    },
    "put": {
      "summary": "Update user by ID",
      "tags": ["Users"],
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "password": {
                  "type": "string"
                },
                "profile": {
                  "type": "object",
                  "properties": {
                    "firstName": { "type": "string" },
                    "lastName": { "type": "string" },
                    "address": { "type": "string" },
                    "postal_code": { "type": "string" },
                    "city": { "type": "string" },
                    "country": { "type": "string" },
                    "avatar_url": { "type": "string" },
                    "role_id": { "type": "string", "format": "uuid" },
                    "user_layout": { "type": "object" }
                  },
                  "required": ["role_id"],
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          }
        }
      },
      "responses": {
        "200": { "description": "User updated" },
        "401": { "description": "Unauthorized" },
        "403": { "description": "Forbidden" }
      },
      "security": [
        { "bearerAuth": [] }
      ]
    },
    "delete": {
      "summary": "Hard delete user by ID",
      "tags": ["Users"],
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
      ],
      "responses": {
        "204": { "description": "User permanently deleted" },
        "403": { "description": "Forbidden" }
      },
      "security": [
        { "bearerAuth": [] }
      ]
    }
  },
  "/users/{id}/soft-delete": {
    "patch": {
      "summary": "Soft delete user by ID",
      "tags": ["Users"],
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
      ],
      "responses": {
        "200": { "description": "User soft deleted" },
        "403": { "description": "Forbidden" }
      },
      "security": [
        { "bearerAuth": [] }
      ]
    }
  }
}