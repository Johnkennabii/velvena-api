{
  "/dress-storage/images": {
    "post": {
      "tags": ["DressStorage"],
      "summary": "Upload new dress images",
      "description": "Upload one or more dress images (IDs are automatically generated).",
      "security": [
        { "bearerAuth": [] }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "images": {
                  "type": "array",
                  "items": { "type": "string", "format": "binary" },
                  "description": "The dress image files to upload"
                }
              },
              "required": ["images"]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Dress images successfully uploaded",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string", "format": "uuid" },
                    "name": { "type": "string" },
                    "url": { "type": "string", "format": "uri" }
                  },
                  "required": ["id", "name", "url"]
                }
              }
            }
          }
        },
        "400": { "description": "Bad Request" },
        "401": { "description": "Unauthorized" }
      }
    },
    "get": {
      "tags": ["DressStorage"],
      "summary": "List all dress images",
      "description": "Retrieve all images from the dresses bucket.",
      "security": [
        { "bearerAuth": [] }
      ],
      "responses": {
        "200": {
          "description": "List of dress images",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "files": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "name": { "type": "string" },
                        "url": { "type": "string" }
                      },
                      "required": ["id", "name", "url"]
                    }
                  }
                },
                "required": ["success", "files"]
              }
            }
          }
        },
        "401": { "description": "Unauthorized" }
      }
    }
  },
  "/dress-storage/{id}": {
    "get": {
      "tags": ["DressStorage"],
      "summary": "Get dress image by ID",
      "description": "Returns a single dress image object by its ID.",
      "security": [
        { "bearerAuth": [] }
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "UUID of the dress image",
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": {
          "description": "Dress image object",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": { "type": "string", "format": "uuid" },
                  "name": { "type": "string" },
                  "url": { "type": "string", "format": "uri" }
                },
                "required": ["id", "name", "url"]
              }
            }
          }
        },
        "401": { "description": "Unauthorized" },
        "404": { "description": "Image not found" }
      }
    }
  },
  "/dress-storage/{key}": {
    "delete": {
      "tags": ["DressStorage"],
      "summary": "Delete dress image by key",
      "description": "Deletes a dress image by its storage key.",
      "security": [
        { "bearerAuth": [] }
      ],
      "parameters": [
        {
          "name": "key",
          "in": "path",
          "required": true,
          "description": "Storage key of the dress image",
          "schema": { "type": "string" }
        }
      ],
      "responses": {
        "200": {
          "description": "Deletion result",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": { "type": "string" },
                  "success": { "type": "boolean" }
                },
                "required": ["message", "success"]
              }
            }
          }
        },
        "401": { "description": "Unauthorized" },
        "404": { "description": "Image not found" }
      }
    }
  }
}