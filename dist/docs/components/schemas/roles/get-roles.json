{
  "Role": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid",
        "example": "84a1d6a4-77c6-4a2b-9c10-4d49a1abc123"
      },
      "name": {
        "type": "string",
        "example": "ADMIN"
      },
      "description": {
        "type": ["string", "null"],
        "example": "Administrateur avec acc√®s complet"
      },
      "created_at": {
        "type": "string",
        "format": "date-time",
        "example": "2024-01-15T08:30:00Z"
      },
      "created_by": {
        "type": ["string", "null"],
        "example": "system"
      },
      "updated_at": {
        "type": ["string", "null"],
        "format": "date-time",
        "example": "2024-03-02T10:00:00Z"
      },
      "updated_by": {
        "type": ["string", "null"],
        "example": "super.admin@allure-creation.fr"
      }
    },
    "required": ["id", "name"]
  },

  "GetRolesResponse": {
    "type": "object",
    "properties": {
      "success": { "type": "boolean", "example": true },
      "data": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/Role" }
      }
    }
  },

  "RoleErrorResponse": {
    "type": "object",
    "properties": {
      "success": { "type": "boolean", "example": false },
      "error": { "type": "string", "example": "Failed to fetch roles" }
    }
  }
}
