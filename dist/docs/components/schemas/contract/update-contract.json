{
  "UpdateContractRequest": {
    "type": "object",
    "description": "Payload for updating a contract. Only include the fields that need to be changed. Dates must be valid ISO-8601 strings.",
    "properties": {
      "status": {
        "type": "string",
        "description": "Contract status",
        "enum": ["DRAFT", "PENDING_SIGNATURE", "SIGNED", "CANCELLED", "EXPIRED"],
        "example": "SIGNED"
      },
      "start_datetime": {
        "type": "string",
        "format": "date-time",
        "description": "New contract start date and time",
        "example": "2025-10-12T10:00:00.000Z"
      },
      "end_datetime": {
        "type": "string",
        "format": "date-time",
        "description": "New contract end date and time",
        "example": "2025-10-14T18:00:00.000Z"
      },
      "deposit_payment_method": {
        "type": "string",
        "description": "Payment method used for the deposit",
        "enum": ["cash", "card", "transfer"],
        "example": "cash"
      },
      "account_ht": {
        "type": "number",
        "format": "float",
        "description": "Deposit amount excluding taxes",
        "example": 400.0
      },
      "account_ttc": {
        "type": "number",
        "format": "float",
        "description": "Deposit amount including taxes",
        "example": 480.0
      },
      "caution_ht": {
        "type": "number",
        "format": "float",
        "description": "Security deposit excluding taxes",
        "example": 100.0
      },
      "caution_ttc": {
        "type": "number",
        "format": "float",
        "description": "Security deposit including taxes",
        "example": 120.0
      },
      "total_price_ht": {
        "type": "number",
        "format": "float",
        "description": "Contract total excluding taxes",
        "example": 500.0
      },
      "total_price_ttc": {
        "type": "number",
        "format": "float",
        "description": "Contract total including taxes",
        "example": 600.0
      }
    },
    "additionalProperties": true
  },
  "UpdateContractResponse": {
    "type": "object",
    "description": "Response returned after a successful contract update.",
    "properties": {
      "success": {
        "type": "boolean",
        "example": true
      },
      "data": {
        "type": "object",
        "description": "Updated contract resource.",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "8f36f92b-3d41-4a55-9b5a-17a53f729c9f"
          },
          "status": {
            "type": "string",
            "example": "SIGNED"
          },
          "start_datetime": {
            "type": "string",
            "format": "date-time",
            "example": "2025-10-12T10:00:00.000Z"
          },
          "end_datetime": {
            "type": "string",
            "format": "date-time",
            "example": "2025-10-14T18:00:00.000Z"
          },
          "deposit_payment_method": {
            "type": ["string", "null"],
            "example": "cash"
          },
          "account_ht": {
            "type": ["number", "null"],
            "example": 400.0
          },
          "account_ttc": {
            "type": ["number", "null"],
            "example": 480.0
          },
          "caution_ht": {
            "type": ["number", "null"],
            "example": 100.0
          },
          "caution_ttc": {
            "type": ["number", "null"],
            "example": 120.0
          },
          "total_price_ht": {
            "type": ["number", "null"],
            "example": 500.0
          },
          "total_price_ttc": {
            "type": ["number", "null"],
            "example": 600.0
          },
          "updated_by": {
            "type": ["string", "null"],
            "format": "uuid",
            "example": "f03b6a82-2034-44c8-8614-7b9f3e2e5a4a"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "example": "2025-10-09T14:23:05.123Z"
          }
        },
        "additionalProperties": true
      }
    },
    "required": ["success", "data"]
  }
}
