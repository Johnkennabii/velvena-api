{
  "/mails/{mailbox}/{uid}/flag/add": {
    "patch": {
      "summary": "Ajouter un flag à un email",
      "description": "Ajoute un flag IMAP à un email spécifique. Les flags standards sont : \\Seen (lu), \\Answered (répondu), \\Flagged (important), \\Deleted (supprimé), \\Draft (brouillon).",
      "tags": ["Mails"],
      "security": [{"bearerAuth": []}],
      "parameters": [
        {
          "name": "mailbox",
          "in": "path",
          "required": true,
          "description": "Type de boîte mail",
          "schema": {
            "type": "string",
            "enum": ["inbox", "sent", "trash", "spam", "drafts"],
            "example": "inbox"
          }
        },
        {
          "name": "uid",
          "in": "path",
          "required": true,
          "description": "UID de l'email",
          "schema": {
            "type": "integer",
            "example": 123
          }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["flag"],
              "properties": {
                "flag": {
                  "type": "string",
                  "description": "Flag IMAP à ajouter",
                  "enum": ["\\Seen", "\\Answered", "\\Flagged", "\\Deleted", "\\Draft"],
                  "example": "\\Flagged"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Flag ajouté avec succès",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {"type": "boolean", "example": true},
                  "message": {"type": "string", "example": "Flag \\Flagged ajouté avec succès"}
                }
              }
            }
          }
        },
        "400": {
          "description": "Paramètres invalides",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {"type": "boolean", "example": false},
                  "error": {"type": "string", "example": "Flag requis (ex: \\Flagged, \\Answered)"}
                }
              }
            }
          }
        },
        "401": {
          "description": "Non authentifié"
        },
        "500": {
          "description": "Erreur serveur",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {"type": "boolean", "example": false},
                  "error": {"type": "string", "example": "Erreur lors de l'ajout du flag"},
                  "details": {"type": "string"}
                }
              }
            }
          }
        }
      }
    }
  }
}
