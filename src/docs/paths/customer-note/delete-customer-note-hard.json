{
  "/customer-notes/{id}": {
    "delete": {
      "tags": ["Customer Notes"],
      "summary": "Hard delete a note",
      "description": "Permanently removes a customer note from the database. This action cannot be undone.",
      "operationId": "hardDeleteCustomerNote",
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" },
          "description": "Note ID"
        }
      ],
      "responses": {
        "200": {
          "description": "‚úÖ Note permanently deleted",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/HardDeleteCustomerNoteResponse" },
              "example": {
                "success": true,
                "message": "Note permanently deleted"
              }
            }
          }
        },
        "404": {
          "description": "‚ùå Note not found",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ErrorResponse" }
            }
          }
        },
        "500": {
          "description": "üí• Server error",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ErrorResponse" }
            }
          }
        }
      }
    }
  }
}
