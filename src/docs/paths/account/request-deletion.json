{
  "/account/request-deletion": {
    "post": {
      "tags": ["Account"],
      "summary": "Request account deletion (Step 1/2)",
      "description": "Initiates the account deletion process.\n\n**For ADMINS:**\n- No email validation required\n- Can proceed immediately to confirmation step\n- Response message: 'Admin deletion request approved. You can proceed immediately.'\n\n**For OWNERS (managers):**\n- Generates a 6-digit validation code\n- Code sent to **organization email** (not user email)\n- Code expires in 30 minutes\n- Organization email must be set in organization settings",
      "operationId": "requestAccountDeletion",
      "security": [{ "bearerAuth": [] }],
      "requestBody": {
        "required": false,
        "description": "No request body required. The organization and user are identified from the JWT token.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {}
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "‚úÖ Validation code sent successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": true
                  },
                  "message": {
                    "type": "string",
                    "example": "Validation code sent to contact@organization.com. Code expires in 30 minutes."
                  },
                  "expiresAt": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-12-19T14:30:00.000Z"
                  }
                },
                "required": ["success", "message", "expiresAt"]
              },
              "examples": {
                "ownerRequest": {
                  "summary": "Owner/Manager request (email validation required)",
                  "value": {
                    "success": true,
                    "message": "Validation code sent to organization email: contact@velvena.com. Code expires in 30 minutes.",
                    "expiresAt": "2025-12-19T14:30:00.000Z"
                  }
                },
                "adminRequest": {
                  "summary": "Admin request (no email validation)",
                  "value": {
                    "success": true,
                    "message": "Admin deletion request approved. You can proceed immediately.",
                    "expiresAt": "2025-12-20T14:00:00.000Z"
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "‚ùå Bad request - User not authorized or organization not found",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean", "example": false },
                  "error": { "type": "string", "example": "Only organization owners and admins can request account deletion" }
                }
              },
              "examples": {
                "notAuthorized": {
                  "summary": "User not authorized",
                  "value": {
                    "success": false,
                    "error": "Only organization owners and admins can request account deletion"
                  }
                },
                "orgNotFound": {
                  "summary": "Organization not found",
                  "value": {
                    "success": false,
                    "error": "Organization not found"
                  }
                },
                "noOrgEmail": {
                  "summary": "Organization email not set (Owner/Manager only)",
                  "value": {
                    "success": false,
                    "error": "Organization email is required for validation. Please set it in organization settings."
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "üîí Unauthorized - Missing or invalid authentication token",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean", "example": false },
                  "error": { "type": "string", "example": "Authentication required" }
                }
              }
            }
          }
        },
        "500": {
          "description": "üí• Internal server error",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean", "example": false },
                  "error": { "type": "string", "example": "Failed to process deletion request" }
                }
              }
            }
          }
        }
      }
    }
  }
}
