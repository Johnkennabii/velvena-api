# ============================================
# N8N Configuration
# ============================================

# Domain & URL
N8N_DOMAIN=n8n.velvena.fr
N8N_PROTOCOL=https

# Basic Authentication
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-this-strong-password

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_DB=n8n
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=change-this-postgres-password

# ============================================
# Redis Cache
# ============================================
REDIS_PASSWORD=change-this-redis-password

# ============================================
# Email (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SENDER=N8N Velvena <noreply@velvena.fr>

# ============================================
# Encryption Key (IMPORTANT: Generate a secure key)
# ============================================
# Generate with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=

# ============================================
# Velvena API Integration
# ============================================
VELVENA_API_URL=https://api.velvena.fr
VELVENA_API_KEY=your-velvena-api-key

# ============================================
# External Services (Optional)
# ============================================
# Stripe
STRIPE_SECRET_KEY=

# OpenAI
OPENAI_API_KEY=

# Slack
SLACK_WEBHOOK_URL=

# ============================================
# Monitoring & Logs
# ============================================
LOG_LEVEL=info
SENTRY_DSN=

# ============================================
# Backup Configuration
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=velvena-n8n-backups
BACKUP_S3_REGION=eu-west-3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
