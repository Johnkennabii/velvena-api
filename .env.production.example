# =============================================================================
# Velvena Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in the values
# Never commit .env.production to git!
# =============================================================================

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
API_URL=https://api.velvena.fr
FRONTEND_URL=https://velvena.fr

# Database Configuration
POSTGRES_DB=velvena_db
POSTGRES_USER=velvena_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DATABASE_URL=postgresql://velvena_user:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/velvena_db?schema=public

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD_HERE@redis:6379

# JWT Secret (generate with: openssl rand -hex 64)
JWT_SECRET=CHANGE_ME_JWT_SECRET_HERE

# Email Configuration (SMTP)
SMTP_HOST=mail.infomaniak.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=contact@velvena.fr
SMTP_PASS=CHANGE_ME_SMTP_PASSWORD_HERE

# Email Configuration (IMAP)
IMAP_HOST=mail.infomaniak.com
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=contact@velvena.fr
IMAP_PASS=CHANGE_ME_IMAP_PASSWORD_HERE

# Hetzner Object Storage Configuration
HETZNER_ACCESS_KEY=CHANGE_ME_HETZNER_ACCESS_KEY
HETZNER_SECRET_KEY=CHANGE_ME_HETZNER_SECRET_KEY
HETZNER_ENDPOINT=https://fsn1.your-objectstorage.com
HETZNER_BUCKET=velvena-storage
HETZNER_REGION=fsn1

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD_HERE

# Backup Configuration
BACKUP_ENCRYPTION_KEY=CHANGE_ME_BACKUP_ENCRYPTION_KEY_HERE
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security Headers
HELMET_CSP_DIRECTIVES=default-src 'self'

# CORS Configuration
CORS_ORIGINS=https://velvena.fr,https://www.velvena.fr

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_REQUEST=5

# Session Configuration
SESSION_TIMEOUT_MINUTES=480

# Feature Flags
ENABLE_SWAGGER_DOCS=false
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System maintenance in progress. Please try again later."

# Multi-tenant Configuration
DEFAULT_ORGANIZATION_PLAN=starter
MAX_ORGANIZATIONS_PER_USER=3
TRIAL_PERIOD_DAYS=14
